    <RelativeLayout
        android:id="@+id/header_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/doctor_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:src="@drawable/male" />

        <TextView
            android:id="@+id/speciality_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/doctor_img"
            android:text="Family Medicine"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speciality_text"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/doctor_img"
            android:text="Iyad Baker"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/address_one_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/doctor_img"
            android:text="54W Olive St. \nLong Beach \nNY 11561"
            android:textAppearance="?android:attr/textAppearanceSmall"
             />

        <TextView
            android:id="@+id/dist_mile_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_one_text"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/doctor_img"
            android:text="(3 miles away)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
    </RelativeLayout>

    <include
        android:id="@+id/doctor_common_ll"
        layout="@layout/doctor_contact_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_relative_layout" />

    <View
        android:id="@+id/dummy_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/doctor_common_ll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/profile_manual_grey"/>

    <TextView
        android:id="@+id/appointment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dummy_view1"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="Appointment Details"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointment_text"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/select_office_time_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textStyle="bold"/>

