<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/doctor_img"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:src="@drawable/male" />

    <TextView
        android:id="@+id/speciality_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/doctor_img"
        android:text="Family Medicine"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speciality_text"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/doctor_img"
        android:text="Iyad Baker"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/address_one_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/doctor_img"
        android:text="54W Olive St. \nLong Beach \nNY 11561"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/mile_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_one_text"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/doctor_img"
        android:text="(3 miles away)"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/phone_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mile_tv"
        android:layout_toRightOf="@+id/doctor_img"
        android:drawableLeft="@drawable/phone_icon"
        android:drawablePadding="5dp"
        android:padding="3dp"
        android:text="123-456-7890"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/primaryColor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/schedule_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mile_tv"
        android:layout_marginBottom="@dimen/padding10"
        android:layout_marginRight="@dimen/padding15"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/light_blue"
        android:textStyle="bold" />
</RelativeLayout>
